<%- include("header") -%>


<div class="box" id="heading">
    <h1 id="date"> <%= kindOfDay %></h1>
</div>
<div class="box">
    <ul>

        <% newListItems.forEach(function(item){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%=item._id%>">
                <p><%= item.name%></p>
            </div>
            <input type="hidden" name="listName" value="<%= kindOfDay %>">
        </form>
        <% }) %>



    </ul>
</div>
<form class="box" action="/" method="post" name="myForm" id="myFor">
    <input type="text" name="newItem" autofocus placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%= kindOfDay %>">+</button>
</form>


<%- include("footer") -%>